@model IEnumerable<WeeklyAssessmentApp.Models.Student>

@{
    ViewData["Title"] = "Display";
}


<h2 class="bg-primary text-white">Total Number of Students : @ViewBag.nos</h2>
<img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQbHkgpwDc0wEEU47Tn3vv4aoeq8Pd99K5hfA&usqp=CAU"  height="300" width="300"/>

<table class="table table-bordered">
    <thead class="thead-dark">
        <tr class="table-primary">
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DOB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contact)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="table-success">
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DOB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contact)
            </td>

        </tr>
}
    </tbody>
</table>
